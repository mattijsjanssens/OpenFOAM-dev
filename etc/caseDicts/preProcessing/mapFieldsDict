FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      mapFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// Map data from source patch to target coincident patch
patchMap
(
    <sourcePatch1> <targetPatch1>
    <sourcePatch2> <targetPatch2>
);

// Target patches whose field values are mapped from the internal source mesh
cuttingPatches
(
    <targetPatch1>
    <targetPatch2>
);

