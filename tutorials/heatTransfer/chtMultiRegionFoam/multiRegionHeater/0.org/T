FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

"(topAir|bottomWater)"
{
    dimensions      [ 0 0 0 1 0 0 0 ];

    internalField   uniform 300;

    boundaryField
    {
        ".*"
        {
            type            zeroGradient;
        }

        minX
        {
            type            fixedValue;
            value           $internalField;
        }
        maxX
        {
            type            inletOutlet;
            inletValue      $internalField;
            value           $internalField;
        }

        ".*_to_.*"
        {
            type            compressible::turbulentTemperatureCoupledBaffleMixed;
            Tnbr            T;
            kappa           fluidThermo;
            kappaName       none;
            value           $internalField;
        }
    }
}

heater
{
    dimensions      [ 0 0 0 1 0 0 0 ];

    internalField   uniform 300;

    boundaryField
    {
        minY
        {
            type            fixedValue;
            value           uniform 500;
        }
        minZ
        {
            type            zeroGradient;
            value           uniform 300;
        }
        maxZ
        {
            type            zeroGradient;
            value           uniform 300;
        }
        heater_to_leftSolid
        {
            type            compressible::turbulentTemperatureCoupledBaffleMixed;
            value           uniform 300;
            Tnbr            T;
            kappa           solidThermo;
            kappaName       none;
            thicknessLayers ( 0.001 );
            kappaLayers     ( 0.0005 );
        }
        ".*_to_.*"
        {
            type            compressible::turbulentTemperatureCoupledBaffleMixed;
            value           uniform 300;
            Tnbr            T;
            kappa           solidThermo;
            kappaName       none;
        }
    }
}


"(leftSolid|rightSolid)"
{
    dimensions      [ 0 0 0 1 0 0 0 ];

    internalField   uniform 300;

    boundaryField
    {
        minX
        {
            type            zeroGradient;
            value           uniform 300;
        }
        maxX
        {
            type            zeroGradient;
            value           uniform 300;
        }
        minZ
        {
            type            zeroGradient;
            value           uniform 300;
        }
        maxZ
        {
            type            zeroGradient;
            value           uniform 300;
        }
        leftSolid_to_heater
        {
            type            compressible::turbulentTemperatureCoupledBaffleMixed;
            value           uniform 300;
            Tnbr            T;
            kappa           solidThermo;
            kappaName       none;
            thicknessLayers ( 0.001 );
            kappaLayers     ( 0.0005 );
        }
        ".*_to_.*"
        {
            type            compressible::turbulentTemperatureCoupledBaffleMixed;
            value           uniform 300;
            Tnbr            T;
            kappa           solidThermo;
            kappaName       none;
        }
    }
}


