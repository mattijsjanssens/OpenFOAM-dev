FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      epsilon;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

"(topAir|bottomWater)"
{
    FoamFile
    {
        version     2.0;
        format      ascii;
        class       volScalarField;
        object      epsilon;
    }

    dimensions      [0 2 -3 0 0 0 0];

    internalField   uniform 0.01;

    boundaryField
    {
        ".*"
        {
            type            epsilonWallFunction;
            value           $internalField;
        }

        minX
        {
            type            fixedValue;
            value           $internalField;
        }
        maxX
        {
            type            inletOutlet;
            inletValue      $internalField;
            value           $internalField;
        }
    }
}

