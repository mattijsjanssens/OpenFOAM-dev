FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      p;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

topAir
{
    dimensions      [1 -1 -2 0 0 0 0];

    internalField   uniform 1e5;

    boundaryField
    {
        ".*"
        {
            type            calculated;
            value           $internalField;
        }
    }
}
bottomWater
{
    dimensions      [1 -1 -2 0 0 0 0];

    internalField   uniform 0;

    boundaryField
    {
        ".*"
        {
            type            calculated;
            value           $internalField;
        }
    }
}

"(heater|leftSolid|rightSolid)"
{
    dimensions      [1 -1 -2 0 0 0 0];

    internalField   uniform 0;

    boundaryField
    {
        ".*"
        {
            type            calculated;
            value           $internalField;
        }
    }
}

