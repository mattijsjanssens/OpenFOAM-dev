FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    note        "mesh decomposition control dictionary";
    location    "system";
    object      decomposeParDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// To keep argList checking happy
numberOfSubdomains  4;

".*"
{
    numberOfSubdomains  ${:numberOfSubdomains};

    method              hierarchical;
    hierarchicalCoeffs
    {
        n           (2 2 1);
        delta       0.001;
        order       xyz;
    }
}


